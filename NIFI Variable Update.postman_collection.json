							"let jsonData = pm.response.json();\r",
							"\r",
							"pm.environment.set(\"clientID\", jsonData.processGroupRevision.clientId);\r",
							"pm.environment.set(\"groupVersion\", jsonData.processGroupRevision.version);\r",
							"\r",
							"console.log(jsonData.processGroupRevision.clientId);\r",
							"console.log(jsonData.processGroupRevision.version);\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
